package com.musicapp.backend.model;

import com.fasterxml.jackson.annotation.JsonIgnore;
import jakarta.persistence.*;
import lombok.Data;

@Data
@Entity
@Table(name = "playlists")
public class Playlist {

    @Id
    @GeneratedValue(strategy = GenerationType.IDENTITY)
    private Long id;

    private String title;

    // This annotation sets up the relationship: Many playlists can belong to One user.
    @ManyToOne(fetch = FetchType.LAZY)
    @JoinColumn(name = "user_id") // This creates a 'user_id' column in the playlists table.
    @JsonIgnore // Prevents infinite loops when converting to JSON
    private User user;
}